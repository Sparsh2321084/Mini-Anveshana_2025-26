# ========================================
# Server Configuration
# ========================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# ========================================
# Database Configuration
# ========================================
# For MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/esp32_iot?retryWrites=true&w=majority

# For PostgreSQL
DATABASE_URL=postgresql://username:password@host:5432/esp32_iot

# Choose database type: 'mongodb' or 'postgresql'
DB_TYPE=mongodb

# ========================================
# Security
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-esp32-api-key-must-match-esp32-config
SESSION_SECRET=your-session-secret-key

# ========================================
# Telegram Bot Configuration
# ========================================
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789
# For multiple chat IDs, separate with commas
# TELEGRAM_CHAT_IDS=123456789,987654321

# ========================================
# Alert Thresholds
# ========================================
TEMP_HIGH_THRESHOLD=35
TEMP_LOW_THRESHOLD=10
HUMIDITY_HIGH_THRESHOLD=80
GAS_THRESHOLD=500
MOISTURE_LOW_THRESHOLD=30

# ========================================
# Email Configuration (Optional)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=ESP32 IoT System <noreply@esp32iot.com>

# ========================================
# Redis Configuration (Optional - for caching)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
# Options: error, warn, info, debug
